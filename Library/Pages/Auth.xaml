<Page x:Class="Library.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Auth">
    <Page.Resources>
        <ControlTemplate x:Key="TextBoxControlTemplate1" TargetType="{x:Type TextBox}">
            <Border x:Name="border" CornerRadius="5" Width="300" Height="36"
                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonLeftSelector" TargetType="{x:Type Button}">
            <Border CornerRadius="10,0,0,10"
                            BorderBrush="#CACACA" Background="#0096EA"
                            Width="120" Height="40">
                <Label Content="Вход" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Foreground="White"/>
                <Border.Effect>
                    <DropShadowEffect Opacity="50" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                </Border.Effect>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonRightSelector" TargetType="{x:Type Button}">
            <Border CornerRadius="0,10,10,0"
                        BorderBrush="#CACACA" Background="White"
                        Width="120" Height="40">
                <Label Content="Регистрация" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Foreground="#B9B9B9"/>
                <Border.Effect>
                    <DropShadowEffect Opacity="50" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                </Border.Effect>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="ReaderLabel" TargetType="{x:Type Label}">
            <StackPanel Orientation="Vertical">
                <Image Source="pack://application:,,,/Resources/reader-icon.png" Width="15"/>
                <Label Content="Читатель" Margin="0,-7,0,0"/>
            </StackPanel>
        </ControlTemplate>
        <ControlTemplate x:Key="LibrarianLabel" TargetType="{x:Type Label}">
            <StackPanel Orientation="Vertical">
                <Image Source="/Library;component/Resources/librarian-icon.png" Width="15"/>
                <Label Content="Библиотекарь" Margin="0,-13,0,0"/>
            </StackPanel>
        </ControlTemplate>
        <ControlTemplate x:Key="AdminLabel" TargetType="{x:Type Label}">
            <StackPanel Orientation="Vertical">
                <Image Source="/Library;component/Resources/admin-icon.png" Width="15"/>
                <Label Content="Администратор" Margin="0,-7,0,0"/>
            </StackPanel>
        </ControlTemplate>

    </Page.Resources>
    <Page.Background>
        <ImageBrush ImageSource="pack://application:,,,/Resources/BackgroundPage.png"/>
    </Page.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1.1*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="11" Grid.Column="1" Margin="0,20,0,20"
            CornerRadius="20,20,20,20" BorderBrush="Black" 
                Background="White">
            <Border.Effect>
                <DropShadowEffect Opacity="50" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Grid.RowSpan="2">
                    <Button Template="{DynamicResource ButtonLeftSelector}"/>
                    <Button Template="{DynamicResource ButtonRightSelector}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Template="{DynamicResource LibrarianLabel}"/>
                        <Label Grid.Column="1" Template="{DynamicResource ReaderLabel}"/>
                        <Label Grid.Column="2" Template="{DynamicResource AdminLabel}"/>
                    </Grid>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top"  Grid.Column="1"
                            Grid.Row="3" HorizontalAlignment="Center"
                            Width="250" Height="7">
                    <Border Width="92" Background="#C9C9C9" CornerRadius="3,0,0,3"/>
                    <Border Width="58" Background="#0096EA"/>
                    <Border Width="100" Background="#C9C9C9" CornerRadius="0,3,3,0"/>
                </StackPanel>
                
                <TextBox x:Name="TBLogin" Grid.Column="1" Grid.Row="6"
                 Template="{DynamicResource TextBoxControlTemplate1}"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                         Text="Логин" Foreground="#B9B9B9">
                    <TextBox.Effect>
                        <DropShadowEffect Opacity="50" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                    </TextBox.Effect>
                </TextBox>
                <TextBox x:Name="TBPassword" Grid.Column="1" Grid.Row="7"
                 VerticalAlignment="Bottom"
                 Template="{DynamicResource TextBoxControlTemplate1}"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                         Text="Пароль" Foreground="#B9B9B9">
                    <TextBox.Effect>
                        <DropShadowEffect Opacity="50" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                    </TextBox.Effect>
                </TextBox>
                <Label Content="Забыли пароль" Foreground="#B9B9B9" 
                       Grid.Column="1" Grid.Row="8" HorizontalAlignment="Center" FontSize="16"/>
                <Label Content="Войти" Foreground="#0096EA" 
                       Grid.Column="1" Grid.Row="12" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="20"/>
            </Grid>
        </Border>

    </Grid>

</Page>
